<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imagebntback"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:background="#F6F2F2"
            app:srcCompat="@drawable/ic_back1" />

        <ImageButton
            android:id="@+id/imagebntmore"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_marginStart="300dp"
            android:backgroundTint="#F8F5F5"
            app:srcCompat="@drawable/ic_more" />
            </LinearLayout>
    <ImageView
            android:id="@+id/imagebaihat"
            android:layout_width="173dp"
            android:layout_height="173dp"
            android:layout_gravity="center"
            tools:srcCompat="@tools:sample/avatars" />

    <TextView
            android:id="@+id/textplaylist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-black"
            android:text="Tên Playlist" />

    <TextView
            android:id="@+id/textuser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Tên user" />
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
            android:id="@+id/textsobaihat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="149dp"
            android:text="Số Bài Hát" />

        <ImageView
            android:id="@+id/imagebaihat"
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:layout_marginTop="8dp"
            app:srcCompat="@drawable/ic_dots" />


        <TextView
            android:id="@+id/textsophut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Số phút" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/imagebntdown"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="55dp"
                android:backgroundTint="#F3F1F1"
                android:src="@drawable/ic_download"
                android:tint="#302F2F" />
            <TextView
                android:id="@+id/texttaixuong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:textSize="12dp"
                android:text="Tải xuống" />
        </LinearLayout>
        <Button
            android:id="@+id/bntphatngaunhien"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:text="Phát Ngẫu Nhiên" />
        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/imagebntplus"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="55dp"
                android:backgroundTint="#F4F1F1"
                android:src="@drawable/ic_plus" />
            <TextView
                android:id="@+id/textthembai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="38dp"
                android:textSize="12dp"

                android:text="Thêm bài" />
        </LinearLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerviewplaylist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textbathaigoiy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textSize="16dp"
            android:text="Bài hát gợi ý" />
        <TextView
            android:id="@+id/textbaihatthinhhanh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textSize="12dp"
            android:text="Bài hát thịnh hành trên Zing MP3" />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerviewbaihatthinhhanh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"/>
    <Button
        android:layout_below="@+id/listviewsuggestedsong"
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:textSize="8dp"
        android:text="Thêm bài" />
</LinearLayout>